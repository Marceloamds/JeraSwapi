<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetailActivity">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.github.florent37.shapeofview.shapes.ArcView
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/arcView"
            android:elevation="4dp"
            app:shape_arc_height="30dp"
            app:shape_arc_position="bottom">
        <TextView
                android:text="Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTitle"
                android:layout_marginStart="16dp"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:textColor="@android:color/white" android:visibility="visible"/>
        <ImageView
            android:id="@+id/imageViewPoster"
            android:src="@drawable/thephantommenace"
            android:layout_width="match_parent"
            android:layout_height="200dp">
    </ImageView>

    </com.github.florent37.shapeofview.shapes.ArcView>

    <TextView
            android:text="Episode ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/episodeId" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editedDate"/>
    <TextView
            android:text="Opening Crawl"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/openingCrawl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/arcView"/>
    <TextView
            android:text="Director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDirector" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/openingCrawl"/>
    <TextView
            android:text="Producer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewProducer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDirector"/>
    <TextView
            android:text="Release Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/releaseDate" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewProducer"/>
    <TextView
            android:text="Edited Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editedDate" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/releaseDate"/>
    <Button
            android:text="Ver Especies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSpecies" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonCharacters"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Ver Naves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStarships" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonSpecies"/>
    <Button
            android:text="Ver VeÃ­culos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonVehicles" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonStarships" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Ver Personagens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCharacters" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/episodeId" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Ver Planetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlanets" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonVehicles" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>