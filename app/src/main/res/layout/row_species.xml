<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/transparent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:background="#99000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold"
                android:id="@+id/textViewLanguage"
                android:text="Speaks Shyriiwook" android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewHeightLifespan"/>
        <TextView
                android:background="#99000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold"
                android:id="@+id/textViewSpecieColor"
                android:text="blue, green, yellow, brown, golden, red eyes\nblack, brown hair" android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewLanguage"/>
        <TextView
                android:background="#99000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold"
                android:id="@+id/textViewHeightLifespan"
                android:text="average 2.1 height\naverage 400 years lifespan" android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageViewSpecie"
                app:layout_constraintTop_toBottomOf="@+id/textViewSpecieName"/>
        <TextView
                android:background="#99000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold"
                android:id="@+id/textViewSpecieName" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:text="Wookie - Sentient Mammal" android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="80dp"
                android:backgroundTint="@android:color/white"
                android:layout_height="80dp" android:src="@drawable/ic_specie"
                android:id="@+id/imageViewSpecie"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>